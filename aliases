# Unix
alias l="ls"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias d="dirs -v"
alias relogin='exec $SHELL -l'
for index ({1..9}) alias "$index"="cd +${index}"; unset index

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
